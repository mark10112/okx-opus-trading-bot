{
  "title": "Opus Activity",
  "uid": "opus-activity",
  "tags": ["trading-bot", "ai"],
  "timezone": "utc",
  "schemaVersion": 39,
  "templating": { "list": [] },
  "time": { "from": "now-1d", "to": "now" },
  "refresh": "1m",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Decisions per Hour",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "custom": { "lineWidth": 2, "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "TradingBot-PostgreSQL" },
          "rawSql": "SELECT date_trunc('hour', created_at) AS time, COUNT(*) AS decisions FROM screener_logs WHERE $__timeFilter(created_at) GROUP BY 1 ORDER BY 1",
          "format": "time_series",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "gauge",
      "title": "Avg Confidence",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "green", "value": 0.7 }
            ]
          }
        }
      },
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "TradingBot-PostgreSQL" },
          "rawSql": "SELECT AVG(confidence_at_entry) AS avg_confidence FROM trades WHERE status = 'closed' AND $__timeFilter(closed_at)",
          "format": "table",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "gauge",
      "title": "Screener Pass Rate",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 0.8 }
            ]
          }
        }
      },
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "TradingBot-PostgreSQL" },
          "rawSql": "SELECT COUNT(*) FILTER (WHERE signal = true)::float / NULLIF(COUNT(*), 0) AS pass_rate FROM screener_logs WHERE $__timeFilter(created_at)",
          "format": "table",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "API Latency",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": { "lineWidth": 1, "fillOpacity": 5 }
        }
      },
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "TradingBot-PostgreSQL" },
          "rawSql": "SELECT created_at AS time, latency_ms FROM screener_logs WHERE $__timeFilter(created_at) ORDER BY created_at",
          "format": "time_series",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "table",
      "title": "Screener Logs",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "fieldConfig": {
        "defaults": {}
      },
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "TradingBot-PostgreSQL" },
          "rawSql": "SELECT created_at, symbol, signal, reason, opus_action, opus_agreed, latency_ms, tokens_used FROM screener_logs WHERE $__timeFilter(created_at) ORDER BY created_at DESC LIMIT 50",
          "format": "table",
          "refId": "A"
        }
      ]
    }
  ]
}
